@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registruj se";
}

<h1 class="text-light">@ViewData["Title"]</h1>
<h4 class="text-light">Povežite Vaš @Model.LoginProvider nalog.</h4>
<hr />

<p class="text-warning">
    Uspešno ste se autentifikovali sa <strong>@Model.LoginProvider</strong>.
    Molimo Vas unesite email adresu i logujte se.
</p>

<div class="row">
    <div class="col-md-4 text-light" >
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group text-light">
                <label>Ime</label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group text-light">
                <label>Prezime</label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group text-light">
                <label>Broj telefona</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-block text-white button-confirm hvr-wobble-horizontal " style="background-color:rgba(191, 155, 56, 0.84) !important;">Registruj se</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
