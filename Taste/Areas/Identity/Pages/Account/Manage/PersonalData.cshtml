@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Lični podaci";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4 class="text-white">@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p class="text-white">Vaš nalog sadrži lične podatke koje ste nam pružili. Ova stranica Vam omogućava da ih obrišete ili nabavite.</p>
        <p>
            <strong class="text-white">Brisanjem ovih podataka trajno brišete nalog i nećete moći povratiti podatke!</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-block text-white button-confirm hvr-wobble-horizontal " style="background-color:rgba(191, 155, 56, 0.84) !important;" type="submit">Nabavi</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-block text-white button-confirm hvr-wobble-horizontal " style="background-color:rgba(191, 155, 56, 0.84) !important;">Izbriši</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}