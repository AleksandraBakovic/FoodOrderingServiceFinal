@page
@model Taste.Pages.Customer.Home.IndexModel
@{
    ViewData["Title"] = "Index";
}

@foreach(var category in Model.CategoryList)
{
    @if(Model.MenuItemList.Where(c=>c.CategoryId==category.Id).Count() >0)
    {
        <div class="row container pb-3 backgroundWhite" style="border: 2px solid white !important;border-radius: 10px 5px !important;">
            <div class="col-12">
                <div class="row">
                    <h2 class="pl-1"><b>@category.Name</b></h2>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach(var menuItem in Model.MenuItemList.Where(c => c.CategoryId == category.Id))
                            {
                                <div class="col-lg-3 col-xl-3 col-md-6 pb-4">
                                    <div class="card">
                                        <div class="pl-3 pt-1 text-center">
                                            <h3 style="height:50px" class="card-title"><b>@menuItem.Name</b></h3>
                                        </div>
                                        <div class="d-flex justify-content-between form-control" style="border:0px;">
                                            <div class="col-6 badge-dark badge">
                                                @menuItem.Category.Name
                                            </div>
                                            <div class="col-6 text-right h5" style="color: rgba(191, 155, 56, 0.84);"><b>@menuItem.Price,00</b></div>
                                        </div>
                                        <img src="@menuItem.Image" class="card-img-top p-2 card" height="200" width="300"/>

                                        <a asp-page="Details" class="btn hvr-wobble-horizontal" style="border-radius:2px;" asp-route-id="@menuItem.Id">Detalji</a>

                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
}

